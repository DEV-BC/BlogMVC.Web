@model BlogMVC.Web.Models.ViewModels.EditTagRequest

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Edit Tag</h1>
    </div>
</div>

<div class="container py-5">
   @if (Model != null)
   {
       <form method="post">
           <div class="mb-3">
               <label class="form-label">Id</label>
               <input type="text" class="form-control" id="id" readonly="readonly" asp-for="Id" >
           </div>
           <div class="mb-3">
               <label class="form-label">Name</label>
               <input type="text" class="form-control" id="name" asp-for="Name" >

           </div>
           <div class="mb-3">
               <label for="" class="form-label">Display Name</label>
               <input type="text" class="form-control" id="displayName" asp-for="DisplayName">
           </div>
           <div class="d-flex">
               <button type="submit" class="btn btn-dark">Update</button>
               <button type="submit" class="btn btn-danger" asp-controller="AdminTags" asp-action="Delete">Delete</button>
           </div>
        
       </form>
   }
   else
   {
       <p>Tag Not Found</p>
   }
</div>